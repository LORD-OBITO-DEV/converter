<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body { font-family: Arial, sans-serif; margin:0; padding:0; background:#f5f6fa; }
    header { background:#0a0a23; color:white; padding:20px; text-align:center; }
    nav a { color:white; margin:0 10px; text-decoration:none; }
    main { padding:20px; }
    section { margin-bottom:30px; padding:20px; background:white; border-radius:10px; box-shadow:0 2px 5px rgba(0,0,0,0.1); }
    h2 { margin-top:0; color:#0a0a23; }
    table { width:100%; border-collapse:collapse; margin-top:10px; }
    table th, table td { border:1px solid #ddd; padding:8px; text-align:center; }
    table th { background:#0a0a23; color:white; }
    footer { text-align:center; padding:10px; background:#0a0a23; color:white; margin-top:20px; }
    .stats { display:flex; gap:20px; }
    .stat-box { flex:1; padding:15px; background:#e3e9ff; border-radius:8px; text-align:center; }
  </style>
</head>
<body>
  <header>
    <h1>Tableau de bord Admin üëë</h1>
    <nav>
      <a href="/admin/dashboard">Dashboard</a>
      <a href="/admin/users">Utilisateurs</a>
      <a href="/admin/payments">Paiements</a>
      <a href="/logout">D√©connexion</a>
    </nav>
  </header>

  <main>
    <section>
      <h2>Statistiques</h2>
      <div class="stats">
        <div class="stat-box">
          <h3>Total Utilisateurs</h3>
          <p><%= usersCount %></p>
        </div>
        <div class="stat-box">
          <h3>Total Admins</h3>
          <p><%= adminsCount %></p>
        </div>
        <div class="stat-box">
          <h3>Num√©ros actifs</h3>
          <p><%= numbers.length %></p>
        </div>
      </div>
    </section>

    <section>
      <h2>Num√©ros Twilio Disponibles</h2>
      <table>
        <tr>
          <th>Num√©ro</th>
          <th>Friendly Name</th>
          <th>Date</th>
        </tr>
        <% numbers.forEach(num => { %>
          <tr>
            <td><%= num.phoneNumber %></td>
            <td><%= num.friendlyName %></td>
            <td><%= num.dateCreated.toISOString().split("T")[0] %></td>
          </tr>
        <% }) %>
      </table>
    </section>

    <section>
      <h2>Derniers utilisateurs inscrits</h2>
      <ul>
        <% latestUsers.forEach(u => { %>
          <li><%= u.username %> - <%= u.email %></li>
        <% }) %>
      </ul>
    </section>
  </main>

  <footer>
    <p>&copy; 2025 Lord Obito - Mentions l√©gales incluses</p>
  </footer>
</body>
</html>
